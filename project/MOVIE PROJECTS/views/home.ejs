<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Movie Collection</title>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #8a2be2;
      --secondary: #9370db;
      --dark: #121212;
      --darker: #0a0a0a;
      --light: #e0e0e0;
      --lighter: #f5f5f5;
      --accent: #ff6b6b;
      --text: #e0e0e0;
      --text-light: #b0b0b0;
      --card-bg: #1e1e1e;
      --card-hover: #2a2a2a;
      --shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
      --border: #333333;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Montserrat', sans-serif;
      background-color: var(--dark);
      color: var(--text);
      line-height: 1.6;
      min-height: 100vh;
      padding: 0;
      margin: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    header {
      text-align: center;
      margin-bottom: 3rem;
      position: relative;
    }

    h1 {
      font-family: 'Playfair Display', serif;
      font-size: 3rem;
      font-weight: 700;
      color: var(--lighter);
      margin-bottom: 1rem;
      background: linear-gradient(to right, var(--primary), var(--secondary));
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      display: inline-block;
    }

    header p {
      color: var(--text-light);
    }

    header::after {
      content: '';
      display: block;
      width: 100px;
      height: 4px;
      background: linear-gradient(to right, var(--primary), var(--secondary));
      margin: 1rem auto;
      border-radius: 2px;
    }

    /* Form Styling */
    .form-container {
      background-color: var(--card-bg);
      border-radius: 12px;
      box-shadow: var(--shadow);
      padding: 2.5rem;
      margin-bottom: 3rem;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border: 1px solid var(--border);
    }

    .form-container:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
      background-color: #252525;
    }

    .form-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-group.full-width {
      grid-column: span 2;
    }

    label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      color: var(--light);
      font-size: 0.95rem;
    }

    input, textarea, select {
      width: 100%;
      padding: 0.8rem 1rem;
      border: 1px solid var(--border);
      border-radius: 8px;
      font-family: 'Montserrat', sans-serif;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      background-color: #2a2a2a;
      color: var(--text);
    }

    input:focus, textarea:focus, select:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(138, 43, 226, 0.2);
      background-color: #333333;
    }

    textarea {
      min-height: 120px;
      resize: vertical;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.8rem 1.8rem;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      border: none;
      font-size: 0.95rem;
    }

    .btn-primary {
      background: linear-gradient(to right, var(--primary), var(--secondary));
      color: white;
      box-shadow: 0 4px 15px rgba(138, 43, 226, 0.4);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(138, 43, 226, 0.5);
    }

    .btn-secondary {
      background-color: #333333;
      color: var(--primary);
      border: 1px solid var(--primary);
    }

    .btn-secondary:hover {
      background-color: #3a3a3a;
    }

    .btn-danger {
      background-color: var(--accent);
      color: white;
    }

    .btn-danger:hover {
      background-color: #ff5252;
      transform: translateY(-2px);
    }

    .btn i {
      margin-right: 8px;
    }

    /* Movie Table */
    .movie-table-container {
      background-color: var(--card-bg);
      border-radius: 12px;
      box-shadow: var(--shadow);
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border: 1px solid var(--border);
    }

    .movie-table-container:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
    }

    .movie-table {
      width: 100%;
      border-collapse: collapse;
    }

    .movie-table thead {
      background: linear-gradient(to right, var(--primary), var(--secondary));
      color: white;
    }

    .movie-table th {
      padding: 1.2rem 1.5rem;
      text-align: left;
      font-weight: 600;
      text-transform: uppercase;
      font-size: 0.8rem;
      letter-spacing: 0.5px;
    }

    .movie-table td {
      padding: 1.2rem 1.5rem;
      border-bottom: 1px solid var(--border);
      vertical-align: middle;
      color: var(--text);
    }

    .movie-table tr:last-child td {
      border-bottom: none;
    }

    .movie-table tr:hover {
      background-color: var(--card-hover);
    }

    .movie-poster {
      width: 80px;
      height: 120px;
      object-fit: cover;
      border-radius: 6px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      transition: transform 0.3s ease;
    }

    .movie-poster:hover {
      transform: scale(1.05);
    }

    .rating-badge {
      display: inline-flex;
      align-items: center;
      background-color: #332a1a;
      color: #ffb74d;
      padding: 0.3rem 0.8rem;
      border-radius: 20px;
      font-weight: 600;
      font-size: 0.85rem;
    }

    .rating-badge i {
      color: #ffb74d;
      margin-right: 5px;
      font-size: 0.8rem;
    }

    .action-buttons {
      display: flex;
      gap: 0.5rem;
    }

    .movie-title {
      font-weight: 600;
      color: var(--lighter);
      margin-bottom: 0.3rem;
    }

    .movie-director {
      font-size: 0.85rem;
      color: var(--text-light);
    }

    .movie-description {
      font-size: 0.9rem;
      color: var(--text-light);
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    /* Animations */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .animated {
      animation: fadeIn 0.6s ease forwards;
    }

    .delay-1 { animation-delay: 0.1s; }
    .delay-2 { animation-delay: 0.2s; }
    .delay-3 { animation-delay: 0.3s; }
    .delay-4 { animation-delay: 0.4s; }

    /* Toggle Switch for Dark/Light Mode */
    .theme-switch {
      position: fixed;
      top: 20px;
      right: 20px;
      z-index: 100;
    }

    .switch {
      position: relative;
      display: inline-block;
      width: 60px;
      height: 34px;
    }

    .switch input {
      opacity: 0;
      width: 0;
      height: 0;
    }

    .slider {
      position: absolute;
      cursor: pointer;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #333;
      transition: .4s;
      border-radius: 34px;
    }

    .slider:before {
      position: absolute;
      content: "";
      height: 26px;
      width: 26px;
      left: 4px;
      bottom: 4px;
      background-color: white;
      transition: .4s;
      border-radius: 50%;
    }

    input:checked + .slider {
      background: linear-gradient(to right, var(--primary), var(--secondary));
    }

    input:checked + .slider:before {
      transform: translateX(26px);
    }

    .slider i {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      color: white;
      font-size: 14px;
    }

    .fa-moon {
      left: 8px;
    }

    .fa-sun {
      right: 8px;
    }

    /* Responsive Design */
    @media (max-width: 992px) {
      .form-grid {
        grid-template-columns: 1fr;
      }
      .form-group.full-width {
        grid-column: span 1;
      }
    }

    @media (max-width: 768px) {
      .container {
        padding: 1.5rem;
      }
      h1 {
        font-size: 2.2rem;
      }
      .movie-table thead {
        display: none;
      }
      .movie-table tr {
        display: block;
        margin-bottom: 1.5rem;
        border-bottom: 2px solid var(--border);
      }
      .movie-table td {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.8rem 1rem;
        border-bottom: 1px solid var(--border);
      }
      .movie-table td::before {
        content: attr(data-label);
        font-weight: 600;
        color: var(--text-light);
        margin-right: 1rem;
        font-size: 0.85rem;
      }
      .action-buttons {
        justify-content: flex-end;
      }
    }
  </style>
</head>

<body>
  <!-- Theme Toggle Switch -->
  <div class="theme-switch">
    <label class="switch">
      <input type="checkbox" id="theme-toggle">
      <span class="slider">
        <i class="fas fa-moon"></i>
        <i class="fas fa-sun"></i>
      </span>
    </label>
  </div>

  <div class="container">
    <header class="animated">
      <h1>Movie Collection</h1>
      <p>Manage your favorite movies in one place</p>
    </header>

    <div class="form-container animated delay-1">
      <h2 style="margin-bottom: 1.5rem; color: var(--lighter);">Add New Movie</h2>
      <form action="/add-movie" method="post" enctype="multipart/form-data">
        <div class="form-grid">
          <div class="form-group">
            <label for="title">Movie Title</label>
            <input
              type="text"
              id="title"
              name="title"
              placeholder="The Shawshank Redemption"
              required
            />
          </div>

          <div class="form-group">
            <label for="director">Director</label>
            <input
              type="text"
              id="director"
              name="director"
              placeholder="Christopher Nolan"
              required
            />
          </div>

          <div class="form-group">
            <label for="releaseYear">Release Year</label>
            <input
              type="number"
              id="releaseYear"
              name="releaseYear"
              placeholder="1994"
              min="1900"
              max="2030"
              required
            />
          </div>

          <div class="form-group">
            <label for="rating">Rating (0-10)</label>
            <input
              type="number"
              id="rating"
              name="rating"
              placeholder="8.7"
              step="0.1"
              min="0"
              max="10"
              required
            />
          </div>

          <div class="form-group">
            <label for="duration">Duration</label>
            <input
              type="text"
              id="duration"
              name="duration"
              placeholder="2h 22m"
              required
            />
          </div>

          <div class="form-group">
            <label for="image">Poster Image</label>
            <input type="file" id="image" name="image" accept="image/*" required />
          </div>

          <div class="form-group full-width">
            <label for="description">Description</label>
            <textarea
              id="description"
              name="description"
              placeholder="Two imprisoned men bond over a number of years..."
              required
            ></textarea>
          </div>
        </div>

        <div style="text-align: right; margin-top: 1rem;">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Add Movie
          </button>
        </div>
      </form>
    </div>

    <div class="movie-table-container animated delay-2">
      <table class="movie-table">
        <thead>
          <tr>
            <th>Poster</th>
            <th>Movie</th>
            <th>Director</th>
            <th>Year</th>
            <th>Rating</th>
            <th>Duration</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% movieData.forEach((item,id)=>{ %> 
            <tr class="animated delay-<%= (id % 3) + 1 %>">
              <td data-label="Poster">
                <img src="<%= item.image %>" class="movie-poster" alt="<%= item.title %>" />
              </td>
              <td data-label="Movie">
                <div class="movie-title"><%= item.title %></div>
                <div class="movie-description"><%= item.description %></div>
              </td>
              <td data-label="Director">
                <div class="movie-director"><%= item.director %></div>
              </td>
              <td data-label="Year"><%= item.releaseYear %></td>
              <td data-label="Rating">
                <span class="rating-badge">
                  <i class="fas fa-star"></i> <%= item.rating %>
                </span>
              </td>
              <td data-label="Duration"><%= item.duration %></td>
              <td data-label="Actions">
                <div class="action-buttons">
                  <a href="/editMovie/<%= item.id %>" class="btn btn-secondary">
                    <i class="fas fa-edit"></i>
                  </a>
                  <a href="/deleteMovie/?dataId=<%= item.id %>" class="btn btn-danger">
                    <i class="fas fa-trash"></i>
                  </a>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>